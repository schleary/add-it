<%= form_for @item, url: {action: "update"} do |item| %>
  <div class="form-group">
    <label>Your Name</label>
    <%= item.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Post Title</label>
    <%= item.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= item.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>URL</label>
    <%= item.text_field :link, class: "form-control" %>
  </div>
  <%= item.submit "Save", class: "btn btn-default" %>
<% end %>
<br>
<%= link_to "Delete", items_destroy_path(@item), class: "btn btn-danger" %><br>
